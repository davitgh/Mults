<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.davidgh.mults.activities.DetailActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.youtube.player.YouTubePlayerView
            android:id="@+id/mult_video"
            android:layout_width="match_parent"
            android:layout_height="140dp" />

        <ImageView
            android:id="@+id/mult_img"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="95dp"
            android:src="@drawable/profile_drawable" />

        <TextView
            android:id="@+id/mult_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/mult_video"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/mult_img"
            android:text="The Flash"
            android:textSize="18sp"
            android:textColor="@color/whitePrimary" />

        <TextView
            android:id="@+id/mult_attribute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#222222"
            android:text="Action, Adventure, Fantasy"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/mult_video"
            android:layout_toEndOf="@+id/mult_img" />

        <RatingBar
            android:id="@+id/mult_rating"
            style="?android:attr/ratingBarStyleSmall"
            android:progressBackgroundTint="@color/colorPrimary"
            android:secondaryProgress="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="10"
            android:stepSize="0.1"
            android:rating="8"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/mult_video"
            android:layout_toEndOf="@+id/mult_img" />

        <TextView
            android:id="@+id/mult_decription"
            android:layout_below="@+id/mult_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#666666"
            android:lineSpacingExtra="4sp"
            android:layout_marginTop="60dp"
            android:padding="10dp"
            android:text="After being struck by lightning, Barry Allen wakes up from his coma to discover he&apos;s been given the power of super speed, becoming the Flash, fighting crime in Central City." />

        <TextView
            android:id="@+id/txt_actors"
            android:layout_below="@+id/mult_decription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f8f8f8"
            android:text="Full Cast &amp; Crew"
            android:padding="10dp"
            android:layout_marginTop="18dp"
            android:textSize="12sp" />

    </RelativeLayout>

    <!-- TODO 5: Here Should be horizontal slider whith actors -->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mult_actors"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <!-- TODO 6: Here should be 3 buttons Like, Favorite, Comment -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f8f8f8">

        <android.support.design.widget.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:fitsSystemWindows="true"
            android:background="?android:attr/windowBackground"
            app:menu="@menu/nav_detail" />
        <!-- TODO : Change Icons to be cosistent with contents -->
    </LinearLayout>
</LinearLayout>
